@model Library.ViewModels.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="card col-12">
    <div class="card-header">
        Login
    </div>
    <form asp-action="Login">
        <div class="form-group">
            <label asp-for="@Model.Login">Login</label>
            <input type="text" class="form-control" asp-for="@Model.Login">
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input type="text" class="form-control" asp-for="@Model.Password">
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" asp-for="@Model.RememberMe">
            <label class="form-check-label" asp-for="@Model.RememberMe">Remember</label>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input class="btn btn-primary col-2" type="submit" value="Login"/>
            </div>
        </div>
    </form>
</div>
