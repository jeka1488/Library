@model Library.ViewModels.RegistrationVM

@{
    ViewBag.Title = "Registration";
    Layout = "_Layout";
}

<div class="card col-12">
    <div class="card-header">
        Registration
    </div>
    <form asp-action="Registration">
        <div class="form-group">
            <label asp-for="@Model.UserName">Login</label>
            <input type="text" class="form-control" asp-for="@Model.UserName">
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email">Email</label>
            <input type="text" class="form-control" asp-for="@Model.Email">
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input type="text" class="form-control" asp-for="@Model.Password">
        </div> 
        
        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword">ConfirmPassword</label>
            <input type="text" class="form-control" asp-for="@Model.ConfirmPassword">
        </div>
        
        <div class="card-footer">
            <div class="form-group">
                <input class="btn btn-primary col-2" type="submit" value="Registration"/>
            </div>
        </div>
    </form>
</div>
